<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CategoryContainer">
        <item name="android:layout_width">@dimen/container_width</item>
        <item name="android:layout_height">@dimen/container_height</item>
    </style>

    <style name="CategoryText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/ShapeAppearance.MaterialComponents.MediumComponent</item>
        <item name="android:layout_marginTop">60dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="CategoryIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tint">@color/white</item>
    </style>
</resources>